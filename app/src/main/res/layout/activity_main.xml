                    style="@style/CustomBtn">
                </Button>
                <Button
                    android:id="@+id/bb2"
                    android:text="@string/bb2"
                    style="@style/CustomBtn">
                </Button>
                <Button
                    android:id="@+id/bdiv"
                    android:text="@string/bdiv"
                    android:backgroundTint="@color/orange_200"

                    android:textStyle="bold"
                    style="@style/CustomBtn">
                </Button>


