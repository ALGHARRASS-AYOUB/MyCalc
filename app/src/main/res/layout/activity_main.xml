            android:paddingBottom="8dp"
            android:paddingTop="20dp"
            android:layout_weight="5"
            android:weightSum="5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/slate"
            android:layout_height="0dp">
