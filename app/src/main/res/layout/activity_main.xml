<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".MainActivity">
        <TextView
            android:id="@+id/resultat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000"
            android:text=""
            android:textColor="#f1f1f1"
            android:textSize="30sp"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:gravity="bottom"
            android:maxLines="1"
            android:layout_weight="1"
            tools:ignore="RtlCompat">

        </TextView>
        <TextView
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#000"
            android:text=""
            android:textColor="#fff"
            android:textSize="50sp"
            android:textAlignment="viewEnd"
            android:padding="10dp"
            android:gravity="bottom"
            android:maxLines="1"
            android:layout_weight="2"
            tools:ignore="RtlCompat">

        </TextView>
        <LinearLayout
            android:layout_weight="7"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#111111"
                android:orientation="vertical"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/bc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bc"
                            android:textColor="#4CAF50"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bac"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bac"
                            android:textColor="#4CAF50"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bb1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bb1"
                            android:textColor="#4CAF50"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bb2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bb2"
                            android:textColor="#4CAF50"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/bcos"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bcos"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="26sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bsin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bsin"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="26sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/btan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/btan"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="26sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bln"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bln"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="26sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/bsquare"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bsquare"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bsqrt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bsqrt"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/binv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/binv"
                            android:textAllCaps="false"
                            android:textColor="#FF5722"
                            android:textSize="26sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bdiv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bdiv"
                            android:textColor="#00BCD4"
                            android:textSize="34sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b7"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/b8"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b8"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/b9"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b9"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bmul"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bmul"
                            android:textColor="#00BCD4"
                            android:textSize="34sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b4"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/b5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b5"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/b6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b6"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bmin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bmin"
                            android:textColor="#00BCD4"
                            android:textSize="34sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b1"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/b2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b2"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/b3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b3"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bplus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bplus"
                            android:textColor="#00BCD4"
                            android:textSize="34sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#000000"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="4">

                        <Button
                            android:id="@+id/b0"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/b0"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bdot"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bdot"
                            android:textColor="#fff"
                            android:textSize="30sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bpi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bpi"
                            android:textColor="#fff"
                            android:textSize="26sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>

                        <Button
                            android:id="@+id/bequal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_corner"
                            android:text="@string/bequal"
                            android:textColor="#4CAF50"
                            android:textSize="34sp"
                            style="?android:attr/buttonBarButtonStyle">

                        </Button>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>